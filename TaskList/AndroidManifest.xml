<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csyo.tasklist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <permission android:name="com.csyo.tasklist.provider.TaskList"></permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name="com.csyo.tasklist.TaskListProvider"
            android:authorities="com.csyo.tasklist.provider.TaskList"
            android:exported="true"
            android:readPermission="com.csyo.tasklist.provider.TaskList" >
        </provider>

        <activity
            android:name="com.csyo.tasklist.TaskListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.csyo.tasklist.TaskDetailActivity"
            android:label="@string/app_name" >
        </activity>

        <receiver
            android:name="com.csyo.tasklist.TaskReceiver">
        </receiver>

        <activity
            android:name="com.csyo.tasklist.AlarmActivity"
            android:label="@string/title_activity_alarm" >
        </activity>
    </application>
    

</manifest>